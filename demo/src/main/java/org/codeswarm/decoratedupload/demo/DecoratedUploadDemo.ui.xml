<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:du='urn:import:org.codeswarm.decoratedupload'>

  <ui:with field="style" type="org.codeswarm.decoratedupload.demo.DecoratedUploadDemoResources.Style"/>

  <g:HTMLPanel addStyleNames="{style.root}">

    <div style="width: 45%; position: absolute; left: 0;">

      <div class="{style.section}">
        <h1>
          Label
        </h1>
        <du:DecoratedUpload>
          <g:Label>
            Upload
          </g:Label>
        </du:DecoratedUpload>
        <br style="clear: both;"/>
      </div>

      <div class="{style.section}">
        <h1>
          Button
        </h1>
        <du:DecoratedUpload>
          <g:Button>
            Upload
          </g:Button>
        </du:DecoratedUpload>
        <br style="clear: both;"/>
      </div>

      <div class="{style.section}">
        <h1>
          Stylish Upload and Download Buttons
        </h1>
        <g:FormPanel>
          <g:HTMLPanel>
            <span style="border: 2px dashed gray; display: inline-block;">
              <div class="{style.horizontal} {style.margin}">
                <du:DecoratedUpload>
                  <g:Button addStyleNames="{style.open} {style.iconButton}">
                    <span/>
                    Upload
                  </g:Button>
                </du:DecoratedUpload>
              </div>
              <div class="{style.margin} {style.horizontal}">
                <g:Button addStyleNames="{style.save} {style.iconButton}">
                  <span/>
                  Download
                </g:Button>
              </div>
              <br style="clear: both;"/>
            </span>
          </g:HTMLPanel>
        </g:FormPanel>
      </div>

    </div>

    <div style="width: 45%; position: absolute; right: 0;">

      <div class="{style.section}">
        <h1>
          Button List, Horizontal
        </h1>
        <g:Button addStyleNames="{style.horizontal}">
          One
        </g:Button>
        <g:Button addStyleNames="{style.horizontal}">
          Two
        </g:Button>
        <div class="{style.horizontal}">
          <du:DecoratedUpload>
            <g:Button>
              Upload
            </g:Button>
          </du:DecoratedUpload>
        </div>
        <g:Button addStyleNames="{style.horizontal}">
          Four
        </g:Button>
        <br style="clear: both;"/>
      </div>

      <div class="{style.section}">
        <h1>
          Button List, Vertical
        </h1>
        <g:Button addStyleNames="{style.vertical}">
          One
        </g:Button>
        <g:Button addStyleNames="{style.vertical}">
          Two
        </g:Button>
        <div class="{style.vertical}">
          <du:DecoratedUpload>
            <g:Button>
              Upload
            </g:Button>
          </du:DecoratedUpload>
        </div>
        <g:Button addStyleNames="{style.vertical}">
          Four
        </g:Button>
        <br style="clear: both;"/>
      </div>

    </div>

  </g:HTMLPanel>

</ui:UiBinder>
